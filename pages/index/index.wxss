/**index.wxss**/
.movieItem{
  width:90%;
  background-color:#fff;
  border-radius:2px;
  box-shadow: 0 1px 6px rgba(0,0,0,0.12),
              0 1px 4px rgba(0,0,0,0.12);
  margin:15px auto;
  position:relative;
}

.movieImg{
  max-width:100%;
  width:100%;
  height: 350px;
}
.tit{
  font-size: 16px;
  font-weight: bold;
}
.moveText{
  display:block;
  width:75%;
  font-size: 12px;
  color: #616161;
  text-align:left;
  margin:0 auto;
  padding:5px 0;
}
.movieInfo{
  width:100%;
  color: #424242;
  padding: 10px 0;
}